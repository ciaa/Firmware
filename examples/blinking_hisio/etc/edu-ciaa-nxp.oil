/*****************************************************************************/
/*  HisIO example DIL configuration file                                     */
/*                                                                           */
/*  This file describes the current Drivers configuration.                   */
/*  References:                                                              */
/*  - API IO Driver http://portal.automotive-his.de/images/pdf/              */
/*                         StandardSoftware/api_iodriver_2_1_3.pdf           */
/*  - API IO Library http://portal.automotive-his.de/images/pdf/             */
/*                   StandardSoftware/api_iolibrary_2.0.3.pdf                */
/*                                                                           */
/*  NOTE: These both standard specify DIL (Driver Implementation Language,   */
/*        but the CIAA-Firmware defines a litle different way to keep        */
/*        compatibility with OIL used for OSEK.                              */
/*****************************************************************************/

DIL DIL {

   DIO MyDioConfig {
      ERRORHOOK = TRUE;

      PIN LED1 {
         PORT = 2;
         PIN = 10;
         DIRECTION = IO_OUTPUT_INIT_LOW;
         INVERTED = TRUE;
      }
      PIN LED2 {
         PORT = 2;
         PIN = 11;
         DIRECTION = IO_OUTPUT_INIT_LOW;
         INVERTED = TRUE;
      }
      PIN LED3 {
         PORT = 2;
         PIN = 12;
         DIRECTION = IO_OUTPUT_INIT_LOW;
         INVERTED = TRUE;
      }
      PIN LED0_R {
         PORT = 2;
         PIN = 0;
         DIRECTION = IO_OUTPUT_INIT_LOW;
         INVERTED = TRUE;
      }
      PIN LED0_G {
         PORT = 2;
         PIN = 1;
         DIRECTION = IO_OUTPUT_INIT_LOW;
         INVERTED = TRUE;
      }
      PIN LED0_B {
         PORT = 2;
         PIN = 2;
         DIRECTION = IO_OUTPUT_INIT_LOW;
         INVERTED = TRUE;
      }

      PIN KEY1 {
         PORT = 1;
         PIN = 0;
         DIRECTION = IO_INPUT;
         INVERTED = FALSE;
      }
      PIN KEY2 {
         PORT = 1;
         PIN = 1;
         DIRECTION = IO_INPUT;
         INVERTED = FALSE;
      }
      PIN KEY3 {
         PORT = 1;
         PIN = 2;
         DIRECTION = IO_INPUT;
         INVERTED = FALSE;
      }
      PIN KEY4 {
         PORT = 1;
         PIN = 6;
         DIRECTION = IO_INPUT;
         INVERTED = FALSE;
      }
      PORT BUS0 {
         PORT = 0;
         SIZE = IO_PORT_SIZE_8;
         MASK = FFFFFFFF;
         DIRECTION = IO_INPUT;
         INVERTED = TRUE;
      }
      PORT BUS1 {
         PORT = 1;
         SIZE = IO_PORT_SIZE_16;
         MASK = 55555555;
         DIRECTION = IO_OUTPUT_INIT_LOW;
         INVERTED = FALSE;
      }
      PORT BUS2 {
         PORT = 2;
         SIZE = IO_PORT_SIZE_32;
         MASK = AAAAAAAA;
         DIRECTION = IO_OUTPUT_INIT_HIGH;
         INVERTED = FALSE;
      }
   }
};
